{
  "name": "Auto Refresh",
  "description": "Automatically refresh the page every 10 seconds",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": ["storage", "activeTab", "scripting", "tabs"]
}
